{
	"compilerOptions": {
		"target": "es2019",
		"lib": ["es2017.object", "es2019", "dom"],
		"module": "esnext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "./src",
		"importHelpers": true,
		"declaration": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"strict": true,
		"baseUrl": ".",

		"paths": {
			"@/*": ["/*"],
			"$res/*": ["src/assets/*"],
			"$components/*": ["src/components/*"],
			"$lib/*": ["src/lib/*"],
			"$stores/*": ["src/stores/*"]
		}
	},

	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"]

